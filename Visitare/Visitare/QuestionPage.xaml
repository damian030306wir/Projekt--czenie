             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Visitare.QuestionPage">

    <StackLayout>
        <Button Text="Wciśnij aby odpowiedzieć" BackgroundColor="#be8feb" FontAttributes="Bold" HorizontalOptions="FillAndExpand"
                Margin="0,150" Clicked="Button_Clicked" CornerRadius="25" TextColor="Black"/>
    
  
    <ListView ItemsSource="{Binding Answers}" ItemTapped="ListView_ItemTapped">
           
        </ListView>
    </StackLayout>
</ContentPage>